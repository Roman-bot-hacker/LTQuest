<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout android:layout_width="match_parent"
    android:theme="@style/AppTheme.NoActionBar"
    android:layout_height="match_parent"
    android:background="@color/colorBackground2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/orientation_logo"
        android:layout_marginEnd="@dimen/orientation_logo"
        android:layout_marginTop="@dimen/margin_top"
        app:srcCompat="@android:color/background_light"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginEnd="@dimen/margin_end"
        android:layout_marginTop="@dimen/top_appname"
        android:text="@string/lvivtripquest"
        android:textColor="@color/colorBackground"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_name"
        android:layout_marginStart="@dimen/margin_top_for_button"
        android:layout_marginEnd="@dimen/margin_top_for_button"
        android:layout_marginTop="@dimen/margin_top_for_button"
        android:inputType="textEmailAddress"
        android:hint="@string/email_adress"
        android:textColor="@color/textColor"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editEmail"
        android:layout_marginStart="@dimen/margin_top_for_button"
        android:layout_marginEnd="@dimen/margin_top_for_button"
        android:layout_marginTop="@dimen/between_email_password"
        android:inputType="textPassword"
        android:hint="@string/your_password"
        android:textColor="@color/textColor"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPassword"
        android:layout_marginStart="@dimen/margin_top_for_button"
        android:layout_marginEnd="@dimen/margin_top_for_button"
        android:layout_marginTop="@dimen/between_email_password"
        android:inputType="textPassword"
        android:hint="@string/your_password"
        android:textColor="@color/textColor"
        android:visibility="gone"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/forgotpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPassword"
        android:layout_marginStart="@dimen/margin_top_for_button"
        android:gravity="start"
        android:layout_marginTop="@dimen/between_password_forgot"
        android:text="@string/forgot_a_password"
        android:textColor="@color/color4"
        android:layout_centerHorizontal="true"/>


    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgotpass"
        android:layout_marginStart="@dimen/margin_top_for_button"
        android:layout_marginEnd="@dimen/margin_top_for_button"
        android:layout_marginTop="@dimen/top_of_login"
        android:text="@string/login"
        android:textColor="#FF907AEC"
        tools:text="Log In"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirmPassword"
        android:layout_marginStart="@dimen/margin_top_for_button"
        android:layout_marginEnd="@dimen/margin_top_for_button"
        android:layout_marginTop="@dimen/top_of_login"
        android:text="Sign In"
        android:textColor="#FF907AEC"
        android:visibility="gone"
        tools:text="Login"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/changeTypeToRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/login"
        android:layout_marginTop="@dimen/between_forgot_haventAcc"
        android:text="@string/dont_have_acc"
        android:textColor="@color/textColor"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/changeTypeToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/registration"
        android:layout_marginTop="@dimen/between_forgot_haventAcc"
        android:text="@string/already_have_an_acc"
        android:textColor="@color/textColor"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/authButtonFacebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/start_of_facebook"
        android:layout_marginTop="@dimen/top_of_google_face"
        app:srcCompat="@drawable/facebook_auth" />

    <ImageView
        android:id="@+id/authButtonGoogle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/start_of_google"
        android:layout_marginTop="@dimen/top_of_google_face"
        app:srcCompat="@drawable/google_plus"/>



</RelativeLayout>