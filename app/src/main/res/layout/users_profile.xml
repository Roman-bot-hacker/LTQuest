<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:id="@+id/field1"
        android:background="@drawable/background"
        android:layout_marginBottom="285dp">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="138dp"
            android:layout_marginRight="138dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/avatar"/>

        <ImageView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="340dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/question" />

        <TextView
            android:id="@+id/name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:textSize="24sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#202020"
            android:lineSpacingExtra="8sp"
            android:gravity="center_horizontal"
            android:text="@string/users_name"/>

        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_user"
            android:layout_marginBottom="4dp"
            android:layout_centerHorizontal="true"
            android:textSize="13sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#858585"
            android:lineSpacingExtra="7sp"
            android:text="@string/sex" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="200dp"
        android:padding="6dp"
        android:elevation="6dp"
        android:background="@drawable/shadows">

        <LinearLayout
            android:id="@+id/liner_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/facebok_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginRight="26dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/facebook_logo"/>



            <RelativeLayout
                android:id="@+id/facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/email_facebok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="8sp"
                    android:textColor="#dd000000"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:text="@string/email_facebook"/>

                <TextView
                    android:id="@+id/facebok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/email_facebok"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="#8a000000"
                    android:lineSpacingExtra="6sp"
                    android:text="@string/facebook"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/facebok"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/line" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/liner_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/liner_facebook">

            <ImageView
                android:id="@+id/google_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginRight="19dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/google_logo" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/email_google"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="8sp"
                    android:textColor="#dd000000"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:text="@string/email_google"/>

                <TextView
                    android:id="@+id/google"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/email_google"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="#8a000000"
                    android:lineSpacingExtra="6sp"
                    android:text="@string/google"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/google"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/line" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/liner_mail"
            android:layout_below="@+id/liner_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/google_logo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginRight="26dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/mail" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/email_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="8sp"
                    android:textColor="#dd000000"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    tools:text="@string/email_mail" />

                <TextView
                    android:id="@+id/mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/email_mail"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="#8a000000"
                    android:lineSpacingExtra="6sp"
                    android:text="@string/Email"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mail"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/line" />

            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>