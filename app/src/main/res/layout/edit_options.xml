<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingEnd="24dp">

    <TextView
        android:id="@+id/edit_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="21dp"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="8sp"
        android:text="@string/edit_options"
        android:textColor="#dd000000"
        android:textSize="20sp"
        android:textStyle="normal" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:drawablePadding="23dp"
        android:drawableStart="@drawable/ava"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="8sp"
        android:text="@string/users_name"
        android:textColor="#dd000000"
        android:textSize="18sp"
        android:textStyle="normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:background="@color/lightdrayline"
        />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:checkedButton="@id/male"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="@string/sex"
            android:textColor="#747474"
            android:paddingStart="10dp"
            android:textSize="16sp"
            android:button="@drawable/radio_button_selector"
            android:textStyle="normal"/>

        <RadioButton
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="10sp"


            android:paddingStart="10dp"
            android:button="@drawable/radio_button_selector"
            android:text="@string/sexf"
            android:textColor="#747474"
            android:textSize="16sp"
            android:textStyle="normal"/>
    </RadioGroup>

    <TextView
        android:id="@+id/facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="26dp"
        android:layout_marginTop="34dp"
        android:drawableStart="@drawable/facebook_logo"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="8sp"
        android:text="@string/email_facebook"
        android:textColor="#dd000000"
        android:textSize="18sp"
        android:textStyle="normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:background="@color/lightdrayline"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="16dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/google_logo"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="8sp"
        android:text="@string/email_google"
        android:textColor="#dd000000"
        android:textSize="18sp"
        android:textStyle="normal" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:background="@color/lightdrayline"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="26dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/mail"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="8sp"
        android:text="@string/email_mail"
        android:textColor="#dd000000"
        android:textSize="18sp"
        android:textStyle="normal" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:background="@color/lightdrayline"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="26dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/lock"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="#dd000000"
        android:lineSpacingExtra="8sp"
        android:text="@string/password"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:background="@color/lightdrayline"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="26dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/lock"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="#dd000000"
        android:lineSpacingExtra="8sp"
        android:text="@string/confirm_password"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:background="@color/lightdrayline"
        />

    <Button
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>